<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="anthill.controller.ShowAntsController">
   <tabs>
      <Tab closable="false" text="Mrówki">
         <content>
            <BorderPane>
               <bottom>
                  <HBox spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="nameTextField" promptText="Nazwa mrówki" />
                        <TextField promptText="X" fx:id="xTextField" />
                        <TextField fx:id="yTextField" promptText="Y" />
                        <CheckBox fx:id="leafCheckBox" mnemonicParsing="false" text="Listek">
                           <padding>
                              <Insets top="4.0" />
                           </padding>
                        </CheckBox>
                        <Button fx:id="exitButton" mnemonicParsing="false" text="Wyjdź" />
                        <Region />
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </BorderPane.margin>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </HBox>
               </bottom>
               <center>
                  <TableView fx:id="showAntsTable" editable="true" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="nameTableColumn" prefWidth="198.0" text="Nazwa" />
                      <TableColumn prefWidth="91.0" text="X" fx:id="xTableColumn" />
                        <TableColumn fx:id="yTableColumn" prefWidth="75.0" text="Y" />
                        <TableColumn fx:id="leafTableColumn" prefWidth="157.0" text="Czy ma listek?" />
                    </columns>
                  </TableView>
               </center>
               <right>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonClicked" text="Dodaj" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonClicked" text="Usuń" />
                        <Button fx:id="moveButton" layoutX="10.0" layoutY="36.0" mnemonicParsing="false" onAction="#moveButtonClicked" text="Porusz" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </right>
            </BorderPane>
         </content>
      </Tab>
      <Tab closable="false" text="Liście">
         <content>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <TableView fx:id="showLeafsTable" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn prefWidth="75.0" text="X" fx:id="xLeafTableColumn" />
                      <TableColumn fx:id="yLeafTableColumn" prefWidth="75.0" text="Y" />
                        <TableColumn fx:id="isCarryableLeafTableColumn" prefWidth="173.0" text="Czy podniesiony" />
                        <TableColumn fx:id="antNameTableColumn" prefWidth="75.0" text="Mrówka" />
                    </columns>
                  </TableView>
               </center>
               <bottom>
                  <HBox spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextField promptText="X" fx:id="xLeafTextField" />
                        <TextField fx:id="yLeafTextField" promptText="Y" />
                        <Region prefHeight="26.0" prefWidth="261.0" />
                        <Button fx:id="exitButton1" mnemonicParsing="false" text="Wyjdź" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </bottom>
               <right>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="addLeafButton" mnemonicParsing="false" onAction="#addLeafButtonClicked" text="Dodaj" />
                        <Button fx:id="changeLeafButton" mnemonicParsing="false" text="Zmień" />
                        <Button fx:id="removeLeafButton" mnemonicParsing="false" text="Usuń" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <BorderPane.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </BorderPane.margin>
                  </VBox>
               </right>
            </BorderPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
